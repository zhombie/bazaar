<?xml version="1.0" encoding="utf-8"?>
<kz.zhombie.bazaar.ui.components.view.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/ItemShapeAppearance"
        tools:src="@tools:sample/backgrounds/scenic" />

    <include
        layout="@layout/view_checkbox"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_gravity="top|end"
        android:layout_margin="2.5dp" />

</kz.zhombie.bazaar.ui.components.view.SquareFrameLayout>