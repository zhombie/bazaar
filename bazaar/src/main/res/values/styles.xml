<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Bottom Sheet-->
    <style name="Bazaar.BottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Bazaar.BottomSheet</item>
    </style>

    <style name="Bazaar.BottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/Bazaar.BottomSheet.ShapeAppearance</item>
    </style>

    <style name="Bazaar.ItemShapeAppearance" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/bazaar_media_item_corner_radius</item>
    </style>

    <style name="Bazaar.CircularShapeAppearance" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Bazaar.RoundedShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Bazaar.BottomSheet.ShapeAppearance" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">13dp</item>
        <item name="cornerSizeTopRight">13dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!--Alert Dialog-->
    <style name="Bazaar.AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/Bazaar.AlertDialogStyle</item>

        <!--Background dim-->
        <item name="android:backgroundDimAmount">0.7</item>

        <!--Shape appearance-->
        <item name="shapeAppearanceMediumComponent">@style/Bazaar.RoundedShapeAppearance</item>

        <!--Item RadioButton or CheckBox color-->
        <item name="colorControlNormal">#7B797A</item>
        <item name="colorControlActivated">#409EFF</item>

        <!--Positive button style-->
        <item name="buttonBarPositiveButtonStyle">@style/Bazaar.Alert.Button.Positive</item>

        <!--Negative button style-->
        <item name="buttonBarNegativeButtonStyle">@style/Bazaar.Alert.Button.Negative</item>

        <!--Negative button style-->
        <item name="buttonBarNeutralButtonStyle">@style/Bazaar.Alert.Button.Neutral</item>

        <!--Padding-->
        <item name="listPreferredItemPaddingLeft">24dp</item>
        <item name="listPreferredItemPaddingRight">24dp</item>

        <!--Title-->
        <item name="materialAlertDialogTitleTextStyle">@style/Bazaar.Alert.TitleText</item>

        <!--Body-->
        <item name="materialAlertDialogBodyTextStyle">@style/Bazaar.Alert.BodyText</item>

        <!--Choice-->
        <item name="android:checkedTextViewStyle">@style/Bazaar.Alert.CheckedTextView</item>
    </style>

    <style name="Bazaar.AlertDialogStyle" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/Bazaar.RoundedShapeAppearance</item>
    </style>

    <style name="Bazaar.Alert.TitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textAppearance">@style/Bazaar.Alert.TitleTextAppearance</item>
        <item name="android:textColor">@color/bazaar_black</item>
    </style>

    <style name="Bazaar.Alert.BodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:textAppearance">@style/Bazaar.Alert.BodyTextAppearance</item>
        <item name="android:textColor">@color/bazaar_black</item>
    </style>

    <style name="Bazaar.Alert.TitleTextAppearance" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Bazaar.Alert.BodyTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">sans-serif</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Bazaar.Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:letterSpacing">0.0</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#409EFF</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/bazaar_ripple</item>

        <item name="background">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Bazaar.Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:letterSpacing">0.0</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#909399</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/bazaar_ripple</item>

        <item name="background">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Bazaar.Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:letterSpacing">0.0</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#4A4A4A</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/bazaar_ripple</item>

        <item name="background">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Bazaar.Alert.CheckedTextView" parent="Widget.MaterialComponents.CheckedTextView">
        <item name="android:textColor">@color/bazaar_black</item>
    </style>
</resources>